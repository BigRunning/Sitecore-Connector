<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <MediaFramework.EmbedMedia>
    <DataContext ID="DataContext" Root="{3D6658D8-A0BF-4E75-B3E2-D050FABCF4E1}"/>
    <script Type="text/javascript" Language="javascript" Src="/sitecore/shell/Controls/Rich Text Editor/EmbedMedia/EmbedMedia.js">.</script>
    <WizardForm CodeBeside="Brightcove.MediaFramework.Brightcove.UI.Rendering.EmbedMediaBrightcove, Brightcove.MediaFramework.Brightcove">

      <WizardFormFirstPage ID="FirstPage" Icon="Applications/32x32/find.png">
        <Border Class="scWizardWelcomeTitle">
          <Literal Text="Welcome to the 'Embed Media' wizard."/>
        </Border>
        <Literal Text="This wizard helps you:"/>
        <ul>
          <li class="scWizardBullet">
            <Literal Text="Find media item"/>  
          </li>
          <li class="scWizardBullet">
            <Literal Text="Set media parameters"/>
          </li>
          <li class="scWizardBullet">
            <Literal Text="Embed media element within the Reach Text Editor"/>
          </li>
        </ul>
      </WizardFormFirstPage>
      
      <WizardFormPage ID="SearchItem" Header="Select Media Item" Text="Select the specific Media Item. Click Next to set media properties." Icon="Applications/32x32/find.png">
        <Tabstrip ID="Tabs" Width="100%" Height="100%">
          <Tab ID="BucketsTab" Header="Search Media Item" Height="100%">
            <Frame SourceUri="/sitecore/shell/Applications/Buckets/MediaBrowser.aspx" Width="100%" Height="100%"></Frame>
          </Tab>
 
          <Tab ID="UploadTab" Header="Upload Media Item" Height="100%">
            <Frame SourceUri="/layouts/MediaFramework/Upload.aspx" ID="UploadFrame" Width="100%" Height="100%"></Frame>
          </Tab>
        </Tabstrip>
        
        <Border Padding="4px 8px 0px 0px" Height="50px">
          <GridPanel Width="100%" Columns="2">
            <Border Padding="10px 4px 10px 10px" Width="30px">
              <Literal Text="Name:"/>
            </Border>
              <Edit ID="Filename" Width="100%" GridPanel.Width="100%" />
          </GridPanel>
        </Border>
      </WizardFormPage>

      <WizardFormPage ID="ParameterSetter" Header="Properties" Text="Set properties of the Media Element." Icon="Applications/32x32/find.png">
        <Border Padding="12px 0px 0px 8px">
          <GridPanel Columns="2">
	          <Border Padding="0px 2px 0px 5px">
		          <Literal Text="Player:"  Width="50px"/>
	          </Border>
	          <Border Padding="5px 2px 5px 5px">
		          <Combobox ID="PlayersList" Width="300px" GridPanel.Width="100px"/>
	          </Border>

			      <Border Padding="0px 2px 0px 5px">
		          <Literal Text="Source:" Width="50px"/>
	          </Border>
	          <Border Padding="5px 2px 5px 5px">
							<Edit ID="SourceInput" Width="225px" GridPanel.Width="75px"/>
	          </Border>

	          <Border Padding="0px 2px 0px 5px">
		          <Literal Text="Video ID:" Width="50px"/>
	          </Border>
	          <Border Padding="5px 4px 5px 5px">
							<Edit ID="VideoIdInput" Width="225px" GridPanel.Width="75px"/>
	          </Border>

	          <Border Padding="0px 2px 0px 5px">
		          <Literal Text="" Width="50px"/>
	          </Border>
	          <Border Padding="5px 2px 5px 5px">
		          <Literal Text="Autoplay: " Width="100px"/>
		          <Checkbox ID="AutoplayCheckbox" Width="25px"/>
		          <Literal Text="Muted: " Width="100px"/>
							<Checkbox ID="MutedCheckbox" Width="25px"/>
	          </Border>

	          <Border Padding="0px 2px 0px 5px">
		          <Literal Text="Embed Style:"  Width="50px"/>
	          </Border>
	          <Border Padding="5px 2px 5px 5px">
							<Radiogroup ID="EmbedRadiogroup">
								<Radiobutton ID="JavascriptRadiobutton" Name="EmbedRadiogroup" Width="30px" GridPanel.Width="50px" GroupName="EmbedRadiogroup"/>
								<Literal Text="Javascript " Width="50px"/>
								<Radiobutton ID="IframeRadiobutton" Name="EmbedRadiogroup" Width="30px" GridPanel.Width="50px" GroupName="EmbedRadiogroup"/>
								<Literal Text="iFrame " Width="50px"/>
							</Radiogroup>
	          </Border>

	          <Border Padding="0px 2px 0px 5px">
		          <Literal Text="Sizing:"  Width="50px"/>
	          </Border>
	          <Border Padding="5px 2px 5px 5px">
							<Radiogroup ID="SizingRadiogroup">
								<Radiobutton ID="ResponsiveRadiobutton" Name="SizingRadiogroup" Width="30px" GridPanel.Width="50px" GroupName="SizingRadiogroup"/>
			          <Literal Text="Responsive " Width="50px"/>
								<Radiobutton ID="FixedRadiobutton" Name="SizingRadiogroup" Width="30px" GridPanel.Width="50px" GroupName="SizingRadiogroup"/>
			          <Literal Text="Fixed " Width="50px"/>
							</Radiogroup>
	          </Border>

	          <Border Padding="0px 2px 0px 5px">
		          <Literal Text="Aspect Ratio:"  Width="50px"/>
	          </Border>
	          <Border Padding="5px 2px 5px 5px">
		          <Combobox ID="AspectRatioList" Width="100px" GridPanel.Width="30px"/>
	          </Border>

						<Border Padding="0px 2px 0px 5px">
							<Literal Text="Width:" Width="50px"/>
						</Border>
						<Border Padding="5px 2px 5px 5px">
							<Edit ID="WidthInput" Width="75px" GridPanel.Width="30px" Value="400" Type="number"/>
						</Border>
            
            <Border Padding="0px 2px 0px 5px">
							<Literal Text="Height:"  Width="50px"/>
            </Border>
            <Border Padding="5px 2px 5px 5px">
							<Edit ID="HeightInput" Width="75px" GridPanel.Width="30px" Value="300" Type="number"/>
            </Border>
          </GridPanel>
        </Border>
      </WizardFormPage>
    </WizardForm>
  </MediaFramework.EmbedMedia>
</control>
