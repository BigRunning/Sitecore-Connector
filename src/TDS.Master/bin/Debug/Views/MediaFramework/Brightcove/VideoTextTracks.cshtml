@using AgencyOasis.MediaFramework.Brightcove.Entities.ViewModels
@using Sitecore
@model VideoTextTracks

@{
    var index = -1;
}

<h1 class="video-name">@Model.Video.Name</h1>
<h2 class="video-id">@Model.Video.Id</h2>
@if (@Model.Tracks != null && @Model.Tracks.Count > 0)
{
    <table>
        <tr>
            <th>Label</th>
            <th>Lang.</th>
            <th>Kind</th>
            <th>Url</th>
            <th>Mime</th>
            <th></th>
        </tr>
        @foreach (var item in @Model.Tracks)
        {
            <tr>
                <td>@item.Label</td>
                <td>@item.SrcLang</td>
                <td>@item.Kind</td>
                <td>@item.Src</td>
                <td>@item.MimeType</td>
                <td>&nbsp;</td>
            </tr>
        }
    </table>
}
else
{
    <div class="no-fields">There are no text tracks.</div>
}

<input type="submit" value="Submit" id="submitButton" class="btn btn-primary start" />